<h2>タイトル</h2>
<%= link_to list_path(@list) do %>
  <p><%= @list.title %></p>
<% end %>
<h2>本文</h2>
<p><%= @list.body %></p>

<h2>画像</h2>
<% if @list.image.attached? %>
  <%= link_to list_path(@list) do %>
    <%= image_tag @list.image, size: "300×300" %>
  <% end %>
<% else %>
  <%= link_to list_path(@list) do %>
    <%= image_tag "no_image", size: "300×300" %>
  <% end %>
<% end %>
<%= link_to '編集', edit_list_path(@list) %>
<%= link_to "削除", list_path(@list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>